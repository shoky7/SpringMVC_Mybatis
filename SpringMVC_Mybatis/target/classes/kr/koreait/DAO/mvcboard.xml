<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace에는 반드시 mapper로 사용되는 인터페이스를 풀 패키지 이름과 같이 적는다. -->
<mapper namespace="kr.koreait.DAO.MybatisDAO">
	<!-- 인터페이스에 작성한 추상 메소드 이름을 id로 사용한다. -->
	<insert id="insert" parameterType="kr.koreait.VO.MvcboardVO">
	insert into mvcboard2(idx,name,password,subject,content,ref,lev,seq) 
	values(mvcboard_idx_seq2.nextval,#{name},#{password},#{subject},#{content},mvcboard_idx_seq2.currval,0,0)
	</insert>
	
	<!-- 메인 글의 개수를 얻어온다. -->
	<select id="selectCount" resultType="int">
		select count(*) from mvcboard2
	</select>
	
	<!-- 한 페이지 분량의 메인 글을 얻어온다. -->
	<select id="selectList" parameterType="java.util.HashMap" resultType="kr.koreait.VO.MvcboardVO">
		<![CDATA[
			select * from (
				select rownum rnum, T.* from (
					select * from mvcboard2 order by idx desc
				) T where rownum <= #{endNo}
			) where rnum >= #{startNo}
		]]>
	</select>
	
	<update id="increment" parameterType="int">
		update mvcboard2 set readCount = readCount + 1 where idx=#{idx}
	</update>
	
	<select id="selectByIdx" parameterType="int" resultType="kr.koreait.VO.MvcboardVO">
		select * from mvcboard2 where idx = #{idx}
	</select>
	
	<delete id="delete" parameterType="int">
		delete from mvcboard2 where idx = #{idx}
	</delete>
	
	<update id="update" parameterType="kr.koreait.VO.MvcboardVO">
		update mvcboard2 set subject = #{subject}, content=#{content} where idx=#{idx}
	</update>
</mapper>
